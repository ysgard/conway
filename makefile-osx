CC = clang 
CFLAGS = -Wall -O3 -g
LIB_DIR = ../libs
LIBTCOD_LIB = libtcod-1.5.2/libtcod.dylib
LIBTCOD_INCLUDE = $(LIB_DIR)/libtcod-1.5.2/include



conway: conway.c
	$(CC) -I $(LIBTCOD_INCLUDE) -c conway.c
	$(CC) -v conway.o $(LIB_DIR)/$(LIBTCOD_LIB) -o conway
	cp $(LIB_DIR)/$(LIBTCOD_LIB) .

clean:
	rm *.o
	rm conway
	rm *.dylib
