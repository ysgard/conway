LIB_DIR = ../libs
LIBTCOD_DIR = libtcod-1.5.2
LIBTCOD_DYLIB = libtcod.dylib

INCLUDE_LIBTCOD = $(LIB_DIR)/$(LIBTCOD_DIR)/include



conway: conway.c
	gcc -I $(INCLUDE_LIBTCOD) -c conway.c
	gcc -v conway.o $(LIB_DIR)/$(LIBTCOD_DIR)/$(LIBTCOD_DYLIB) -o conway
	cp $(LIB_DIR)/$(LIBTCOD_DIR)/$(LIBTCOD_DYLIB) .

clean:
	rm *.o
	rm conway
	rm *.dylib
